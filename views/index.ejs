<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/style.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HAM-PAY - My Secure Payments</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">

    <nav class="bg-blue-700 p-4 text-white shadow-lg">
        <div class="container mx-auto font-bold text-xl">üè¶ HAM-PAY secure payments Demo</div>
    </nav>

    <main class="container mx-auto p-6">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">HAM-PAY Dashboard</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% users.forEach(user => { %>
                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-xl font-bold text-blue-600">@<%= user.username %></h2>
                        <span class="text-xs bg-gray-100 px-2 py-1 rounded text-gray-500">User ID: <%= user.id %></span>
                    </div>
                    
                    <div class="space-y-3">
                        <% user.Accounts.forEach(acc => { %>
                            <div class="flex justify-between p-3 bg-gray-50 rounded-lg">
                                <span class="font-medium text-gray-600"><%= acc.currency %></span>
                                <span class="font-mono font-bold text-green-600">
                                    <%= acc.currency === 'USD' ? '$' : acc.currency === 'EUR' ? '‚Ç¨' : '¬£' %><%= acc.balance %>
                                </span>
                            </div>
                        <% }) %>
                    </div>

                    <form action="/transfer" method="POST" class="mt-6 pt-4 border-t">
                        <input type="hidden" name="senderId" value="<%= user.id %>">
                        <p class="text-sm font-semibold mb-2 text-gray-700">Send Money From This User:</p>
                        <div class="flex flex-col gap-2">
                            <input type="text" name="receiverUsername" placeholder="Recipient Username" class="border p-2 rounded text-sm" required>
                            <div class="flex gap-2">
                                <input type="number" name="amount" placeholder="Amount" class="border p-2 rounded text-sm w-full" required>
                                <select name="currency" class="border p-2 rounded text-sm">
                                    <option value="USD">USD</option>
                                    <option value="EUR">EUR</option>
                                    <option value="GBP">GBP</option>
                                </select>
                            </div>
                            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white py-2 rounded text-sm font-bold transition">
                                Confirm Transfer
                            </button>
                        </div>
                    </form>
                </div>
            <% }) %>
        </div>
    </main>

</body>
</html>

<div class="payment-card">
    <h3>Make a Payment</h3>
    
    <label for="amount">Enter Amount (‚Ç¶)</label>
    <input type="number" id="amount" name="amount" placeholder="0.00" min="100">

    <label for="email">Email Address</label>
    <input type="email" id="email" name="email" placeholder="customer@example.com">

    <button type="submit" id="pay-button">Pay Now</button>
</div>
